<div id="<%= "#{dom_id(todo)}_item" %>">
  <%= turbo_frame_tag dom_id(todo) do %>
    <div class=" <%= 'complete' if todo.complete? %> todo">
      <span class='title'>
         <%= todo.title %>
      </span>

      <% if todo.complete? %>
        <%= button_to "Mark incomplete", todo_path(todo, todo: { status: 'incomplete'}), method: :patch, class: "red button" %>
      <% else %>
        <%= button_to "Mark complete", todo_path(todo, todo: { status: 'complete'}), method: :patch, class: "green button" %>
      <% end %>

      <%= link_to "Edit", edit_todo_path(todo), class: "button" %>
      <%= button_to "Delete", todo_path(todo), method: :delete, class: "red button" %>
    </div>
  <% end %>
</div>
