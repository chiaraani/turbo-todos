<%= form_with(model: todo, id: "#{dom_id(todo)}_form") do |form| %>
  <% if todo.errors.any? %>
    <% todo.errors.each do |error| %>
      <p class="error"><%= error.full_message %></p>
    <% end %>
  <% end %>

  <div class="todo">
    <%= form.text_field :title, placeholder: "Add a new todo", 'aria-label': 'Title' %>
    <%= form.submit %>
    <%= link_to 'Cancel', todo, class: 'red button' if todo.id %>
</div>

<% end %>
